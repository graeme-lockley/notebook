{
	"name": "notebook",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "eslint . --fix",
		"test:unit": "vitest run",
		"test:unit:ui": "vitest --ui",
		"test:unit:coverage": "vitest run --coverage",
		"test:unit:watch": "vitest --watch",
		"test:all": "npm run lint && npm run check && npm run test:unit",
		"clean": "rm -rf .svelte-kit build dist test-results coverage",
		"dev:check": "concurrently \"npm run dev\" \"npm run check:watch\""
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,md,css,html}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.7.0",
		"@testing-library/svelte": "^5.2.8",
		"@vitest/ui": "^3.2.4",
		"concurrently": "^9.2.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.5",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@codemirror/commands": "^6.8.1",
		"@codemirror/lang-html": "^6.4.9",
		"@codemirror/lang-javascript": "^6.2.4",
		"@codemirror/lang-markdown": "^6.3.4",
		"@codemirror/language": "^6.11.2",
		"@codemirror/state": "^6.5.2",
		"@codemirror/view": "^6.38.1",
		"@observablehq/graphviz": "^0.2.1",
		"@observablehq/inputs": "^0.12.0",
		"@observablehq/inspector": "^5.0.0",
		"@observablehq/katex": "^0.11.1",
		"@observablehq/parser": "^6.1.0",
		"@observablehq/plot": "^0.6.17",
		"@observablehq/runtime": "^6.0.0",
		"@observablehq/stdlib": "^5.8.8",
		"lucide-svelte": "^0.539.0",
		"marked": "^16.2.0"
	}
}
